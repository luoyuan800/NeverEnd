<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView android:id="@+id/pets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:visibility="visible"
                android:onClick="onClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_toStartOf="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pet_root"
                android:background="#00000000"
                android:onClick="onClick"></LinearLayout>
    </ScrollView>
    <cn.luo.yuan.maze.display.view.RollTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/info_view"
            android:layout_toEndOf="@+id/pets"
            android:layout_below="@+id/linearLayout"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout3">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/monster_pic"
                android:src="@drawable/zl"
                android:onClick="onClick"
                android:layout_gravity="center"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monster_name"
                android:layout_gravity="center"
                android:text="很长的怪物名字"
                android:layout_marginBottom="20dp"/>
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="层数:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/hero_level"
                    android:text="100000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_level_max"
                    android:text="10000000W"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="点击:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_click"
                    android:text="10000000W"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="锻造:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_mate"
                    android:text="10000000W"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/first_click_skill"
                android:enabled="true"
                android:onClick="onClick"
                android:background="@color/toumin"
                />
        <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/second_click_skill"
                android:enabled="true"
                android:onClick="onClick"
                android:background="@color/toumin"
                android:layout_marginBottom="10dp"
                />
        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/third_click_skill"
                android:enabled="true"
                android:onClick="onClick"
                android:background="@color/toumin"
                android:layout_marginBottom="20dp"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/linearLayout2">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/hero_pic"
                android:src="@drawable/zl"
                android:onClick="onClick"
                android:layout_gravity="center"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/hero_name"
                android:text="名字"/>


        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="天赋:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_gift"
                    android:text="宠物大师"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="生命:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_hp"
                    android:text="10000000W"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="攻击:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_atk"
                    android:text="100000W"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防御:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_def"
                    android:text="100000W"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="力量:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_str"
                    android:text="100000W"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="敏捷:"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hero_agi"
                    android:text="100000W"/>
        </LinearLayout>
        <TextView
                android:id="@+id/sword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="神马什么衣服+15.34W"
                android:textColor="#3506da"
                android:textSize="13sp"
                android:onClick="onClick"
                />

        <TextView
                android:id="@+id/armor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="神马神马贱+12.46W"
                android:textColor="#0307da"
                android:textSize="13sp"
                android:onClick="onClick"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/linearLayout2"
            android:id="@+id/linearLayout4">

        <Button
                android:id="@+id/first_skill"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:alpha="90"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textSize="8sp"
                android:onClick="onClick"
                android:background="@color/toumin" />

        <Button
                android:id="@+id/secondary_skill"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:alpha="90"
                android:gravity="center"
                android:textSize="8sp"
                android:onClick="onClick"
                android:background="@color/toumin" />

        <Button
                android:id="@+id/third_skill"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:alpha="95"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textSize="8sp"
                android:onClick="onClick"
                android:background="@color/toumin" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"

            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/linearLayout4">

        <Button
                android:id="@+id/fourth_skill"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:alpha="90"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="二转开启"
                android:textSize="8sp"
                android:enabled="false"
                android:onClick="onClick"
                android:background="@color/toumin"
                android:layout_marginBottom="5dp"/>

        <Button
                android:id="@+id/fifit_skill"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:alpha="95"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="四转开启"
                android:textSize="8sp"
                android:onClick="onClick"
                android:background="@color/toumin" />

        <Button
                android:id="@+id/sixth_skill"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:alpha="90"
                android:gravity="center"
                android:text="六转开启"
                android:textSize="8sp"
                android:onClick="onClick"
                android:background="@color/toumin" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_info"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/linearLayout2">


        <TextView
                android:id="@+id/hat_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="名字很长的帽子"
                android:layout_weight="1"
                android:maxWidth="100dp"
                android:onClick="onClick"
                />

        <TextView
                android:id="@+id/ring_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="名字很长的戒指" android:layout_weight="1"
                android:onClick="onClick"
                />
        <TextView
                android:id="@+id/necklace_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="名字很长的项链" android:layout_weight="1"
                android:onClick="onClick"
                />
    </LinearLayout>

    <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_dialog_dialer"
            android:id="@+id/fab"
            android:elevation="1dp"
            android:background="@color/active"
            android:onClick="showButtons"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>