<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/toumin"
            android:layout_gravity="bottom"
            android:layout_toEndOf="@+id/teller_img"
            android:layout_alignParentTop="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
        >
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tell_message"
                    android:gravity="bottom"
                    android:background="@color/toumin"/>
        </LinearLayout>


    </ScrollView>

    <ImageView
            android:src="@drawable/luwu_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/teller_img"
            android:background="@color/toumin"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <ImageButton
            android:src="@drawable/mobvista_cm_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_msg_button"
            android:background="@color/toumin"
            android:layout_alignParentEnd="true"/>

    <ImageButton
            android:src="@drawable/mobvista_cm_exits"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/close_button"
            android:elevation="2dp"
            android:alpha="0.4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>