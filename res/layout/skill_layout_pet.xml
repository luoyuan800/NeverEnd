<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_gravity="left|center_vertical"
        android:gravity="fill">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                style="@android:style/Widget.Button.Inset"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:id="@+id/pet_trainer"
                android:tag="Trainer"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginEnd="50sp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                style="@android:style/Widget.Button.Inset"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:id="@+id/pet_foster"
                android:tag="Foster"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginStart="50sp"/>
    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center" android:src="@drawable/line_2_center_down"
            android:adjustViewBounds="true"/>

    <ImageButton
            android:scaleType="fitCenter"
            android:tag="PetMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pet_master"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            style="@android:style/Widget.Button.Inset"/>

</LinearLayout>
