<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dlc_title"
            android:textSize="20sp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/evo_er_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dlc_1"
                android:layout_weight="1"/>

        <ImageView
                android:src="@drawable/evo_an"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dlc_2"
                android:layout_weight="1"/>

        <ImageView
                android:src="@drawable/evo_du"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dlc_3"
                android:layout_weight="1"/>
    </LinearLayout>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dlc_desc"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:text="消耗碎片："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dlc_cost"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <Button
                android:text="@string/buy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dlc_buy"
                android:layout_weight="1"
                style="@android:style/Widget.Button.Inset"/>

        <Button
                android:text="@string/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close"
                android:layout_weight="1"
                style="@android:style/Widget.Button.Inset"/>
    </LinearLayout>

</LinearLayout>