<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_gravity="left|center_vertical"
        android:gravity="fill">

    <ImageButton
            android:scaleType="fitCenter"
            android:tag="EvilTalent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evil_talent"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.Button.Inset"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center" android:src="@drawable/line_2_center"
            android:adjustViewBounds="true"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginEnd="50dp"
                style="@android:style/Widget.Button.Inset"
                android:gravity="right"
                android:textStyle="bold|italic"
                android:id="@+id/reinforce"
                android:tag="Reinforce"
                android:layout_gravity="center"
                android:visibility="visible"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                style="@android:style/Widget.Button.Inset"
                android:gravity="left"
                android:textStyle="bold|italic"
                android:id="@+id/stealth"
                android:tag="Stealth"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginStart="50sp"/>
    </LinearLayout>

</LinearLayout>
