<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <cn.luo.yuan.maze.display.view.RollTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/online_battle_msg"
                android:layout_weight="1"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:text="当前所在的队伍"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/group_message"/>

            <TextView
                    android:layout_weight="1"
                    android:text="现在取回可以获得的奖励"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/online_award"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:text="取回"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/action_button"
            style="@android:style/Widget.Button.Transparent"/>
</LinearLayout>